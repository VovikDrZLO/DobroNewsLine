<Window x:Class="DobroNewsLine.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SettingsWindow" Height="300" Width="222.637">
    <Grid Margin="5,5,2,5">
        <Label Content="Category ID" HorizontalAlignment="Left" Margin="10,120,0,0" VerticalAlignment="Top" Height="25"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="162"/>
        <TextBox HorizontalAlignment="Left" Margin="102,120,0,0" TextWrapping="Wrap" x:Name="CategoryIdTextBox" 
                   VerticalAlignment="Top" Height="25" Width="98" PreviewTextInput="NumberValidationTextBox"/>
        <Label Content="PagesCount" HorizontalAlignment="Left" Margin="10,145,0,0" VerticalAlignment="Top" Height="25"/>
        <TextBox HorizontalAlignment="Left" Margin="102,145,0,0" TextWrapping="Wrap" PreviewTextInput="NumberValidationTextBox" 
                   VerticalAlignment="Top" Height="25" Width="98" x:Name="PageCountTextBox"/>
        <Button Content="Get_Data" HorizontalAlignment="Left" Margin="10,175,0,0" VerticalAlignment="Top" Width="75" Click="Get_DataButton_Click"/>

    </Grid>
</Window>
